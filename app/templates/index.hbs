<div class="fixed-action-btn">
  <a role="button" class="btn-floating btn-large red" {{action "openContactModal"}}>
    <MaterialIcon @name="add" />
  </a>
</div>

<div class="row">
  <div class="col s12 center-align">
    <h3>Contact list</h3>
  </div>
</div>

<div class="row">
  {{#each model.data as |contact|}}
    <ContactCard class="col s12 m6 l4 xl3"
                 @contact={{contact}}
                 @clickAction={{action "showDetails"}}
                 @deleteAction={{action "deleteContact"}}
                 @editAction={{action "openContactModal"}} />
  {{/each}}
</div>

<div class="row">
  <div class="col s12 center-align">
    <h6>Showing {{model.data.length}} of {{model.total}}</h6>
  </div>
</div>

<div class="row">
  <div class="col s12 center-align">
    <a role="button" {{action "loadNextPage"}}
       class="waves-effect waves-teal btn-flat {{unless hasMorePages "disabled"}}">
      Show more
    </a>
  </div>
</div>

<ContactForm @data={{contactInfo}} @saveAction={{action "save"}}/>
